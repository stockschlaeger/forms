import React, { useState } from 'react';
import { Users, Calendar, Clock, ChefHat, MessageSquare, Send } from 'lucide-react';

export default function BBQForm() {
  const [formData, setFormData] = useState({
    name: '',
    email: '',
    datum: '',
    uhrzeit: '',
    anzahlPersonen: '',
    fleischArt: [],
    beilagen: [],
    getraenke: [],
    besondereWuensche: '',
    allergien: '',
    budget: ''
  });

  const fleischOptionen = [
    'Rindfleisch (Steaks, Burger)',
    'Schweinefleisch (Bratwurst, Koteletts)',
    'Hähnchen (Brust, Schenkel)',
    'Fisch (Lachs, Forelle)',
    'Vegetarische Alternativen',
    'Vegane Alternativen'
  ];

  const beilagenOptionen = [
    'Grillgemüse',
    'Kartoffelsalat',
    'Nudelsalat',
    'Coleslaw',
    'Brot & Brötchen',
    'Grüner Salat',
    'Maiskolben',
    'Grillkartoffeln'
  ];

  const getraenkeOptionen = [
    'Bier',
    'Wein',
    'Softdrinks',
    'Wasser',
    'Säfte',
    'Cocktails'
  ];

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: value
    }));
  };

  const handleCheckboxChange = (category, option) => {
    setFormData(prev => ({
      ...prev,
      [category]: prev[category].includes(option)
        ? prev[category].filter(item => item !== option)
        : [...prev[category], option]
    }));
  };

  const handleSubmit = () => {
    console.log('BBQ Wünsche:', formData);
    alert('Vielen Dank! Deine Grillwünsche wurden erfasst.');
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-orange-50 to-red-50 py-8 px-4">
      <div className="max-w-4xl mx-auto">
        <div className="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div className="bg-gradient-to-r from-orange-500 to-red-500 px-8 py-6">
            <div className="flex items-center gap-3">
              <ChefHat className="w-8 h-8 text-white" />
              <h1 className="text-3xl font-bold text-white">BBQ Wunsch-Formular</h1>
            </div>
            <p className="text-orange-100 mt-2">Teile uns deine Grillwünsche mit!</p>
          </div>

          <div className="p-8 space-y-8">
            <div className="grid md:grid-cols-2 gap-6">
              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Name *
                </label>
                <input
                  type="text"
                  name="name"
                  value={formData.name}
                  onChange={handleInputChange}
                  required
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                  placeholder="Dein Name"
                />
              </div>
              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  E-Mail *
                </label>
                <input
                  type="email"
                  name="email"
                  value={formData.email}
                  onChange={handleInputChange}
                  required
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                  placeholder="deine@email.de"
                />
              </div>
            </div>

            <div className="grid md:grid-cols-3 gap-6">
              <div>
                <label className="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                  <Calendar className="w-4 h-4" />
                  Gewünschtes Datum *
                </label>
                <input
                  type="date"
                  name="datum"
                  value={formData.datum}
                  onChange={handleInputChange}
                  required
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                />
              </div>
              <div>
                <label className="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                  <Clock className="w-4 h-4" />
                  Uhrzeit
                </label>
                <input
                  type="time"
                  name="uhrzeit"
                  value={formData.uhrzeit}
                  onChange={handleInputChange}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                />
              </div>
              <div>
                <label className="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                  <Users className="w-4 h-4" />
                  Anzahl Personen *
                </label>
                <input
                  type="number"
                  name="anzahlPersonen"
                  value={formData.anzahlPersonen}
                  onChange={handleInputChange}
                  required
                  min="1"
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                  placeholder="z.B. 8"
                />
              </div>
            </div>

            <div>
              <h3 className="text-lg font-semibold text-gray-800 mb-4">Fleisch & Hauptspeisen</h3>
              <div className="grid md:grid-cols-2 gap-3">
                {fleischOptionen.map((option) => (
                  <label key={option} className="flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:bg-orange-50 cursor-pointer transition-colors">
                    <input
                      type="checkbox"
                      checked={formData.fleischArt.includes(option)}
                      onChange={() => handleCheckboxChange('fleischArt', option)}
                      className="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                    />
                    <span className="text-gray-700">{option}</span>
                  </label>
                ))}
              </div>
            </div>

            <div>
              <h3 className="text-lg font-semibold text-gray-800 mb-4">Beilagen</h3>
              <div className="grid md:grid-cols-2 gap-3">
                {beilagenOptionen.map((option) => (
                  <label key={option} className="flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:bg-orange-50 cursor-pointer transition-colors">
                    <input
                      type="checkbox"
                      checked={formData.beilagen.includes(option)}
                      onChange={() => handleCheckboxChange('beilagen', option)}
                      className="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                    />
                    <span className="text-gray-700">{option}</span>
                  </label>
                ))}
              </div>
            </div>

            <div>
              <h3 className="text-lg font-semibold text-gray-800 mb-4">Getränke</h3>
              <div className="grid md:grid-cols-3 gap-3">
                {getraenkeOptionen.map((option) => (
                  <label key={option} className="flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:bg-orange-50 cursor-pointer transition-colors">
                    <input
                      type="checkbox"
                      checked={formData.getraenke.includes(option)}
                      onChange={() => handleCheckboxChange('getraenke', option)}
                      className="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                    />
                    <span className="text-gray-700">{option}</span>
                  </label>
                ))}
              </div>
            </div>

            <div>
              <label className="block text-sm font-semibold text-gray-700 mb-2">
                Budget pro Person (optional)
              </label>
              <select
                name="budget"
                value={formData.budget}
                onChange={handleInputChange}
                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
              >
                <option value="">Budget auswählen</option>
                <option value="unter-15">Unter 15€</option>
                <option value="15-25">15€ - 25€</option>
                <option value="25-35">25€ - 35€</option>
                <option value="35-50">35€ - 50€</option>
                <option value="ueber-50">Über 50€</option>
              </select>
            </div>

            <div>
              <label className="block text-sm font-semibold text-gray-700 mb-2">
                Allergien & Unverträglichkeiten
              </label>
              <textarea
                name="allergien"
                value={formData.allergien}
                onChange={handleInputChange}
                rows="3"
                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all resize-none"
                placeholder="Bitte teile uns mit, wenn du Allergien oder Unverträglichkeiten hast..."
              />
            </div>

            <div>
              <label className="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                <MessageSquare className="w-4 h-4" />
                Besondere Wünsche & Anmerkungen
              </label>
              <textarea
                name="besondereWuensche"
                value={formData.besondereWuensche}
                onChange={handleInputChange}
                rows="4"
                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all resize-none"
                placeholder="Hast du besondere Wünsche oder Ideen für das BBQ? Lass es uns wissen!"
              />
            </div>

            <div className="pt-6 border-t border-gray-200">
              <button
                type="button"
                onClick={handleSubmit}
                className="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold rounded-lg hover:from-orange-600 hover:to-red-600 focus:ring-4 focus:ring-orange-200 transition-all duration-200 flex items-center justify-center gap-2"
              >
                <Send className="w-5 h-5" />
                Wünsche absenden
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}